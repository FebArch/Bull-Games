<!DOCTYPE html>
<html lang="en">
<head>
    <title>Signup</title>
    <%- include('./partials/head.ejs') %>
    
</head>
<body>
    
    <%- include('./partials/navbar.ejs') %>
    
    <div class="container">
        <h1 class="text-center my-3">Signup</h1>
        <hr class="my-3">
    </div>

    <% if (locals.err) { %>
        <div class="container">
            <div class="alert alert-danger" role="alert">
                <%= err %>
              </div>
        </div>
    <% } %>
    
    
    <div class="container">
        <form action="/signup" method="post">
        
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" id="exampleFormControlInput1">
              </div>

            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" name="email" required id="exampleInputEmail1" aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" class="form-control" name="password" required id="exampleInputPassword1">
            </div>

            <select class="form-select w-25" name= "role" aria-label="Default select example">
                <option value="user" selected>user</option>
                <option value="dmin">admin</option>
              </select>

            <button type="submit" class="btn btn-success mt-3 d-block mx-auto w-25 px-1">Signup</button>
            <a href="/login" style="text-decoration: none;"><button type="button" class="mt-3 d-block btn-outline-success mx-auto btn">Login</button></a>
          </form>
    </div>

</form>
<%- include('./partials/footer.ejs') %>
<%- include('./partials/script.ejs') %>


</body>
</html>